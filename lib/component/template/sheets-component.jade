div.panel.panel-default
  div.panel-heading #[i.fa.fa-table] Sheets
  ul.list-group
    li.list-group-item("v-for"="sheetName in sheetNames", "v-on:click"="onSelect(sheetName)",
    "v-bind:class"="{'list-group-item-info': sheetName == (currentSheetDefinition && currentSheetDefinition.name)}") {{sheetName}}
    li.list-group-item
      div.row
        div.col-md-8
          input.form-control(type="text", "v-model"="newName", placeholder="New sheet name")
        div.col-md-4
          button.btn.btn-primary.btn-block("v-on:click"="onAdd") #[i.fa.fa-plus] Add
    li.list-group-item
      div.row
        div.col-md-12
          button.btn.btn-danger.btn-block("v-on:click"="onDelete") #[i.fa.fa-trash] Delete
