mixin form-group(title)
  div.form-group
    label.control-label(class="col-xs-4")= title
    div(class="col-xs-8")
      block

div.panel.panel-default
  div.panel-heading Column
  div.panel-body
    div.form-horizontal
      +form-group("Header")
        input#column-header.form-control(type="text")
      +form-group("Data")
        input#column-data.form-control(type="text")
      +form-group("Type")
        select#column-type.form-control
          option(value="text") Text
          option(value="numeric") Numeric
      +form-group("Width")
        input#column-width.form-control(type="number")
